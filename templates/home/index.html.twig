{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
        <header class="masthead">
                <div class="container h-100">
                        <div class="row h-100 align-items-center justify-content-center text-center">
                                <div class="col-lg-10 align-self-end">
                                        <h1 class="text-uppercase text-white font-weight-bold">Bienvenue sur MeetDown</h1>
                                        <hr class="divider my-4">
                                </div>
                                <div class="col-lg-8 align-self-baseline">
                                        <p class="text-white-75 font-weight-light mb-5">Voir plus de conférence !</p>
                                        <a class="btn btn-primary btn-xl js-scroll-trigger" href="{{ path("conference_all") }}">Voir plus</a>
                                </div>
                        </div>
                </div>
        </header>
        <!-- Services Section -->
        <section class="page-section" id="services">
                <div class="container">
                        <h2 class="text-center mt-0">Découvrir MeetDown</h2>
                        <hr class="divider my-4">
                        <div class="row">
                                <div class="col-lg-3 col-md-6 text-center">
                                        <div class="mt-5">
                                                <i class="fa fa-4x fa-gem text-primary mb-4"></i>
                                                <h3 class="h4 mb-2">Apprendre</h3>
                                                <p class="text-muted mb-0">En assistant a nos conférences vous pouvez développer vos compétences !</p>
                                        </div>
                                </div>
                                <div class="col-lg-3 col-md-6 text-center">
                                        <div class="mt-5">
                                                <i class="fas fa-4x fa-clock text-primary mb-4"></i>
                                                <h3 class="h4 mb-2">Temps réel</h3>
                                                <p class="text-muted mb-0">De nouvelles conférence chaque jour !</p>
                                        </div>
                                </div>
                                <div class="col-lg-3 col-md-6 text-center">
                                        <div class="mt-5">
                                                <i class="fas fa-4x fa-globe text-primary mb-4"></i>
                                                <h3 class="h4 mb-2">Communauté </h3>
                                                <p class="text-muted mb-0">Une énorme communauté à travers le monde !</p>
                                        </div>
                                </div>
                                <div class="col-lg-3 col-md-6 text-center">
                                        <div class="mt-5">
                                                <i class="fas fa-4x fa-heart text-primary mb-4"></i>
                                                <h3 class="h4 mb-2">Adorer</h3>
                                                <p class="text-muted mb-0">MeetDown ? Vous allez adorer ! </p>
                                        </div>
                                </div>
                        </div>
                </div>
        </section>
        <!-- Portfolio Section -->
        <section id="portfolio">
                <div class="container-fluid p-0">
                        <h2 class="text-center mb-3">Dernieres conférences</h2>
                        <hr class="divider my-4">
                        <div class="row no-gutters">
                                {% for conference in conferences %}
                                        <div class="col-lg-4 col-sm-6">
                                                <a class="portfolio-box" href="{{ path("detail_conference", {id : conference.id}) }}">
                                                        <img class="img-fluid" src="{{ conference.image }}" alt="">
                                                        <div class="portfolio-box-caption">
                                                                <div class="project-name">
                                                                        {{ conference.name }}
                                                                </div>
                                                        </div>
                                                </a>
                                        </div>
                                {% endfor %}


                        </div>
                </div>
        </section>

        <!-- Contact Section -->
        <section class="page-section" id="contact">
                <div class="container">
                        <div class="row justify-content-center">
                                <div class="col-lg-8 text-center">
                                        <h2 class="mt-0">Nous Contacter!</h2>
                                        <hr class="divider my-4">
                                        <p class="text-muted mb-5">Envie d'organiser une conférences sur le théme de l'informatique ? Contactez nous au plus vite !</p>
                                </div>
                        </div>
                        <div class="row">
                                <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0">
                                        <i class="fas fa-phone fa-3x mb-3 text-muted"></i>
                                        <div>+33 6 06 06 06 06</div>
                                </div>
                                <div class="col-lg-4 mr-auto text-center">
                                        <i class="fas fa-envelope fa-3x mb-3 text-muted"></i>
                                        <a class="d-block" href="mailto:contact@yourwebsite.com">contact@meetdown.com</a>
                                </div>
                        </div>
                </div>
        </section>


{% endblock %}
