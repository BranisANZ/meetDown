{% extends 'admin/base.html.twig' %}

{% block title %}Admin - Dashboard!{% endblock %}

{% block body %}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Top Conférences</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% if topTen | length > 0 %}
                    <table class="table table-striped table-dark">
                        <thead>
                        <tr>
                            <th scope="col">Titre</th>
                            <th scope="col">Moyenne</th>
                            <th scope="col">Nb Vote</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for conference in topTen %}
                                <tr>
                                    <td>{{conference.name}}</td>
                                    <td>{{conference.moyen}}</td>
                                    <td>{{conference.nbrvote}}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {% else %}
                        <p>Pas encore de notation pour établir un classement</p>
                    {% endif %}


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <button style="border:none; background:none;" data-toggle="modal" data-target="#exampleModal">

            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Top Conférences</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-pie fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
            </button>

        </div>
    </div>
{% endblock %}
